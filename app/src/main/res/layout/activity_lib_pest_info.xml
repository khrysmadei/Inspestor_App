<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FDF1E1"
    tools:context=".LibPestInfo">
    <View
        android:id="@+id/spaceBar"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="#BCBA7F"
        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/navBar"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        android:elevation="10dp"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/topBarText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:fontFamily="@font/roboto_black"
            android:text="PESTNAME"
            android:textColor="@color/black"
            android:textSize="25sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.cardview.widget.CardView
            android:id="@+id/back_btn"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:clickable="true"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/btn_color"
            app:cardCornerRadius="10dp"
            app:cardElevation="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_margin="5dp"
                    android:src="@drawable/bck_fin"
                    app:layout_constraintBottom_toTopOf="@+id/textView2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:tint="@color/white" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="BACK"
                    android:textColor="@color/white"
                    android:textSize="9sp"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/scroller"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="20dp">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/img_box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <com.limerse.slider.ImageCarousel
                    android:id="@+id/carouselView"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    app:imageScaleType="fitCenter"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="20dp"
                android:id="@+id/line"
                app:layout_constraintTop_toBottomOf="@id/img_box"/>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/linear"
                app:layout_constraintTop_toBottomOf="@id/line">

                <TextView
                    android:id="@+id/pest_label"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:fontFamily="@font/be_vietnam"
                    android:text="pestname"

                    android:textColor="@color/black"
                    android:textSize="30sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sci_pest"
                    android:fontFamily="@font/abel"
                    android:text="ScientificName"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/green_dark"
                    android:textSize="15sp"
                    android:textStyle="italic"
                    app:layout_constraintStart_toStartOf="@id/pest_label"
                    app:layout_constraintTop_toBottomOf="@id/pest_label"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/sci_pest">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/lifeC_title"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:text="Life Cycle"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/be_vietnam"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pest_lifeC"
                        android:fontFamily="@font/abel"
                        android:justificationMode="inter_word"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:text="description"
                        android:textSize="15sp"
                        android:textColor="@color/green_dark"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pest_damage"
                        android:layout_marginTop="10dp"
                        android:layout_marginStart="20dp"
                        android:text="Damage Symptoms"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:fontFamily="@font/be_vietnam"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pestdamage_desc"
                        android:fontFamily="@font/abel"
                        android:justificationMode="inter_word"
                        android:paddingHorizontal="20dp"
                        android:paddingTop="10dp"
                        android:paddingBottom="20dp"
                        android:text="description"
                        android:textSize="15sp"
                        android:textColor="@color/green_dark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pest_manage"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/be_vietnam"
                        android:text="Management Recommendation"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pestmanage_steps"
                        android:fontFamily="@font/abel"
                        android:textSize="15sp"
                        android:text="steps"
                        android:justificationMode="inter_word"
                        android:paddingHorizontal="20dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/green_dark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pest_treat"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/be_vietnam"
                        android:text="Recommended Pesticide"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pestreat_name"
                        android:fontFamily="@font/abel"
                        android:textSize="15sp"
                        android:text="pesticide"
                        android:justificationMode="inter_word"
                        android:paddingHorizontal="20dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/green_dark"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/pest_acti"
                        android:layout_marginStart="20dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/be_vietnam"
                        android:text="Active Ingredients"
                        android:textSize="20sp"
                        android:textColor="@color/black"/>

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/pestacti_name"
                        android:fontFamily="@font/abel"
                        android:textSize="15sp"
                        android:text="pesticide"
                        android:justificationMode="inter_word"
                        android:paddingHorizontal="20dp"
                        android:paddingBottom="20dp"
                        android:textColor="@color/green_dark"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:id="@+id/line2"
                app:layout_constraintTop_toBottomOf="@id/linear"/>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>