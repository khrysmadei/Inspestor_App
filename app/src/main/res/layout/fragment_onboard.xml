<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".onboarding.MainOnBoardingActivity">

   <com.airbnb.lottie.LottieAnimationView
       android:id="@+id/image_boarding1"
       android:layout_width="250dp"
       android:layout_height="250dp"
       android:layout_centerHorizontal="true"
       android:layout_margin="30dp"
       android:scaleType="fitCenter"
       app:lottie_rawRes="@raw/welcome"
       app:lottie_loop="true"
       app:lottie_autoPlay="true" />

   <androidx.appcompat.widget.AppCompatTextView
       android:id="@+id/onboarding_title"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/image_boarding1"
       android:layout_marginStart="30dp"
       android:layout_marginEnd="30dp"
       android:text="@string/onboard_title1"
       android:textSize="19sp"
       android:gravity="center"
       android:textStyle="bold"
       android:textColor="@color/dark_grey"
       android:layout_marginBottom="30dp"/>

   <androidx.appcompat.widget.AppCompatTextView
       android:id="@+id/onboarding_description"
       android:layout_width="match_parent"
       android:layout_height="wrap_content"
       android:layout_below="@id/onboarding_title"
       android:text="@string/onboard_desc1"
       android:textSize="14sp"
       android:textColor="@color/black"
       android:gravity="center"
       android:layout_marginBottom="30dp"/>

</RelativeLayout>